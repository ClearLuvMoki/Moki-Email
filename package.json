{
  "name": "react-rsbuild-electron",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run dev:mail-view",
    "dev:mail-view": "cross-env PORT=8088 rsbuild dev --config builder/render/main/rsbuild.dev.ts",
    "dev:sidebar-view": "rsbuild dev --config builder/render/sidebar/rsbuild.dev.ts",
    "dev:setting-view": "rsbuild dev --config builder/render/setting/rsbuild.dev.ts",
    "dev:main": "cross-env PORT=8088  nodemon",
    "rebuild:main": "npm run build:main && electron ./release/dist/main/index.js",
    "build:main": "rsbuild build --config ./builder/main/rsbuild.build.ts",
    "build:render": "rsbuild build --config builder/render/main/rsbuild.build.ts",
    "build": "npm run build:main &&  npm run build:render && electron-builder build --publish never ",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@electron/rebuild": "^3.6.0",
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-toggle": "^1.1.0",
    "@react-email/components": "0.0.21",
    "better-sqlite3": "^11.1.2",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-email": "2.1.5",
    "react-hook-form": "^7.52.1",
    "sonner": "^1.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-menubar": "^1.1.1",
    "@radix-ui/react-navigation-menu": "^1.2.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@rsbuild/core": "^0.7.0",
    "@rsbuild/plugin-react": "^0.7.0",
    "@types/deep-equal": "^1.0.4",
    "@types/imap": "^0.8.40",
    "@types/mailparser": "^3.4.4",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "ahooks": "^3.8.0",
    "autoprefixer": "^10.4.19",
    "await-to-js": "^3.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.11",
    "deep-equal": "^2.2.3",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "imap": "^0.8.19",
    "lucide-react": "^0.400.0",
    "mailparser": "^3.7.1",
    "mobx": "^6.13.0",
    "mobx-react": "^9.1.1",
    "nodemon": "^3.1.1",
    "postcss": "^8.4.39",
    "prebuild-install": "^7.1.2",
    "react-markdown": "^9.0.1",
    "react-resizable-panels": "^2.0.20",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.4",
    "tailwindcss-animate": "^1.0.7",
    "typeorm": "^0.3.20",
    "typescript": "^5.4.2"
  },
  "pnpm": {
    "supportedArchitectures": {
      "os": [
        "current"
      ],
      "cpu": [
        "x64",
        "arm64"
      ]
    }
  },
  "build": {
    "productName": "react-rsbuild-electron",
    "appId": "react.rsbuild.electron.demo",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "./release/dist",
      "node_modules",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
