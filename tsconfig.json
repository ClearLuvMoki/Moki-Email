{
  "compilerOptions": {
    "experimentalDecorators": true,
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2021",
      "ESNext"
    ],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "pretty": true,
    "sourceMap": true,
    "baseUrl": "./",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "inlineSources": true,
    "allowJs": true,
    "outDir": "release",
    "paths": {
      "@/src/*": [
        "./src/*"
      ],
      "@/resources/*": [
        "./resources/*"
      ],
      "@/constant/*": [
        "./constant/*"
      ],
      "@/components/*": [
        "./src/render/components/*"
      ],
      "@/pages/*": [
        "./src/render/pages/*"
      ],
      "@/layout/*": [
        "./src/render/layout/*"
      ],
      "@/routers/*": [
        "./src/render/routers/*"
      ]
    }
  },
  "exclude": [],
  "include": [
    "src",
    "constant"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
